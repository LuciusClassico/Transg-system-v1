<div class="view-user p-5">

  <div class="row mb-5">
    <div class="col text-center">
      <h3><%= customer.firstName %> <%= customer.lastName %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row"><%= customer.firstName %> </th>
            <td><%= customer.lastName %></td>
            <td><%= customer.email %></td>
            <td><%= customer.tel %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col">
        <b>details</b>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= customer.details %>
      </div>
    </div>
  </div>
 
</div>